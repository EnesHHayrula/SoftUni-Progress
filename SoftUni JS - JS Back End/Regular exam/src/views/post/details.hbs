<section id="detailsPage">
  <div id="detailsInfo">
    <h1>Name: {{electronic.name}}</h1>
    <div class="info"><img src="{{electronic.image}}" /></div>

    <div class="info">
      <h3>Type: {{electronic.type}}</h3>
      <h3>Year of Production: {{electronic.productionYear}}</h3>
      <h3>Years of Exploitation: {{electronic.exploitationYear}}</h3>
      <h3>
        Damages:
        {{electronic.damages}}
      </h3>
      <h3>
        Description:
        {{electronic.description}}
      </h3>
      <h2>Price: ${{electronic.price}}</h2>
    </div>

    <!--If there is user logged in-->
    {{#if isAuthenticated}}
      <div class="buttons">
        <!--If user is not owner of the toy post-->
        {{#unless isOwner}}
          {{#unless hasBuy}}
            <a
              href="/catalog/{{electronic._id}}/buyingList"
              class="buy-btn"
            >Buy</a>
          {{/unless}}
        {{/unless}}
        <!--If user is owner-->
        {{#if isOwner}}
          <a href="/catalog/{{electronic._id}}/edit" class="edit-btn">Edit</a>
          <a
            href="/catalog/{{electronic._id}}/delete"
            class="delete-btn"
          >Delete</a>
        {{/if}}

        <!--If user is not the owner and is bought this toy-->

        {{#unless isOwner}}
          {{#if hasBuy}}
            <p><span class="buy">Thank You For Your Purchase</span></p>
          {{/if}}
        {{/unless}}

      </div>
    {{/if}}
  </div>
</section>